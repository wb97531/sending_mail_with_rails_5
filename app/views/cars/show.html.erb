<div class="page-header">
  <%= link_to cars_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_car_path(@car), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show car</h1>
</div>

<dl class="dl-horizontal">
  <dt>Make:</dt>
  <dd><%= @car.make %></dd>

  <dt>Model:</dt>
  <dd><%= @car.model %></dd>

  <dt>Year:</dt>
  <dd><%= @car.year %></dd>

  <dt>Price:</dt>
  <dd><%= number_to_currency(@car.price) %></dd>

</dl>
