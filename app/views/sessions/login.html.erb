<div class='jumbotron'>
  <div class='row'>
    <div class='col-xs-4 center-block'>
      <%= image_tag('octocat.png', class: 'img-responsive') %>
      <%= link_to button_tag('Sign in via Github', class: 'btn-auth btn-github'), '/auth/github' %>
    </div>
    <div class='col-xs-6 col-xs-offset-2'>
      <h1>Log in</h1>
      <%= form_tag login_path do %>
        <div class="form-group">
          <%= label_tag :email %>
          <div class="col-sm-6">
            <%= text_field_tag :email %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <div class="col-sm-10">
            <%= password_field_tag :password %>
          </div>
        </div>

        <p class='button'><%= submit_tag 'Signin' %></p>
      <% end %>
    </div>
  </div>
</div>

